{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "declarationMap": true,
        "target": "es2020",
        "module": "es2015",
        "sourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "types": [],
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/core/chain.ts",
        "./examples/*.ts",
        "**/test/*.ts",
        "**/*.spec.ts"
    ]
}
